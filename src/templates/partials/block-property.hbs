<section>
    {{#compare title "===" 'false' }}{{else}}
        <h3 id="inputs">
            Properties
        </h3>
    {{/compare}}
    {{#each properties}}
        <table class="table table-sm table-bordered">
            <tbody>
                <tr>
                    <td class="col-md-4">
                        <b>{{#if modifierKind}}<span class="modifier">{{modifKind modifierKind}}</span>{{/if}} {{name}}</b>
                    </td>
                </tr>
                {{#if ../file-path}}
                <tr>
                    <td class="col-md-4">
                        <i><code>{{file}}</code></i>
                    </td>
                </tr>
                {{/if}}
                <tr>
                    <td class="col-md-4">
                        {{#if modifierKind}}<span class="modifier-icon fa fa-{{modifIcon modifierKind}}"></span>{{/if}}<code>{{name}}: {{> link-type type=type }}</bcode>
                    </td>
                </tr>
                {{#if defaultValue}}
                    <tr>
                        <td class="col-md-4">
                            <i>Default value: </i><code>{{defaultValue}}</code>
                        </td>
                    </tr>
                {{/if}}
                {{#if line}}
                    <tr>
                        <td class="col-md-4">
                            <div class="io-line">Defined in <a href="" data-line="{{{line}}}" class="link-to-prism">{{../file}}:{{{line}}}</a></div>
                        </td>
                    </tr>
                {{/if}}
                {{#if description}}
                <tr>
                    <td class="col-md-4">
                        <div class="io-description">{{{parseDescription description ../depth}}}</div>
                    </td>
                </tr>
                {{/if}}
            </tbody>
        </table>
    {{/each}}
</section>
