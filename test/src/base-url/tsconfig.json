{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "dom",
      "es5",
      "es2015.collection",
      "es2015.iterable"
    ],
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true, // Required for debugging NPM published package.
    "outDir": "dist/",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@project/core": [
        "modules/core/core/src/index"
      ],
      "@project/api": [
        "modules/core/api/src/index"
      ],
      "@project/module1": [
        "modules/module1/src/index"
      ],
      "@project/module2": [
        "modules/module2/src/index"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "modules/**/*.ts"
  ],
  "exclude": [
    "src/test/converter/**/*.ts"
  ]
}
